{
  "name": "@job-portal/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "clean": "rm -rf dist .wrangler",
    "typecheck": "tsc --noEmit",
    "tail": "wrangler tail",
    "db:migrate": "wrangler d1 migrations apply job-portal-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply job-portal-db --remote",
    "db:migrate:staging": "wrangler d1 migrations apply job-portal-db --remote --env staging",
    "db:migrate:production": "wrangler d1 migrations apply job-portal-db --remote --env production",
    "db:generate": "wrangler d1 migrations create job-portal-db"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.2",
    "@job-portal/shared": "*",
    "hono": "^4.6.14",
    "jose": "^5.9.6",
    "nanoid": "^5.0.9",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241230.0",
    "typescript": "^5.7.2",
    "wrangler": "^3.99.0"
  }
}

